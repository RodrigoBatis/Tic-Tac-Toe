<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_cristal"
    tools:context=".Pagina1v1Activity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/delius_unicase"
        android:text="Tic-Tac-Toe"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:background="@color/white"
        android:backgroundTint="#80000000"
        android:gravity="center"
        android:text="PLAYER X PLAYER"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER1:"
        android:textColor="@color/white"
        android:paddingRight="100dp"/>


    <EditText
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:text="Type your name"
        android:textColor="@color/black"
        android:background="@color/white"
        android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/x"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bolinha"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER2:"
        android:textColor="@color/white"
        android:paddingRight="100dp"/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:text="Type your name"
        android:textColor="@color/black"
        android:background="@color/white"
        android:gravity="center"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn1v1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="GO"
        android:textSize="30dp"
        android:backgroundTint="@color/black"
        android:layout_marginBottom="126dp"

        />
</LinearLayout>
