<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resultado1v1"
    android:background="@drawable/fundo_cristal"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textSize="42dp"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tituloprincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/delius_unicase"
        android:text="Tic-Tac-Toe"
        android:textColor="@color/white"
        android:textSize="40sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER 1"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/azul_transparente"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPUTER"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/azul_transparente"
        android:layout_marginBottom="170dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/new_game"
            android:layout_marginRight="55dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/close"
            android:layout_marginRight="55dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/main_menu"/>

    </LinearLayout>
</LinearLayout>