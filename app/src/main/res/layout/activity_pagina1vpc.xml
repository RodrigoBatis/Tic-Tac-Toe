<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pagina1vpc"
    android:background="@drawable/fundo_cristal"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/delius_unicase"
        android:text="Tic-Tac-Toe"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:background="@color/white"
        android:backgroundTint="#80000000"
        android:gravity="center"
        android:text="PLAYER X COMPUTER"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PLAYER1:"
            android:textColor="@color/white"
            android:paddingRight="100dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/nomeJogador1"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:hint="Type your name"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/x"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bolinha"/>

    </LinearLayout>

    <Button
        android:id="@+id/btneasy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#9900F5E7"
        android:text="easy level" />

    <Button
        android:id="@+id/btnmiddle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#9900F5E7"
        android:text="middle level"/>

    <Button
        android:id="@+id/btnhard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#9900F5E7"
        android:text="hard level"/>
</LinearLayout>